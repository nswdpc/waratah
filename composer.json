{
    "name": "nswdpc/waratah",
    "description": "Silverstripe integration for the NSW Design System",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "nsw",
        "module",
        "theme",
        "nsw design system"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "James Ellis",
            "role": "Developer"
        },
        {
            "name": "Mark Taylor",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "NSWDPC\\Waratah\\": [
                "src/"
            ]
        }
    },
    "replace": {
        "nswdpc/silverstripe-nsw-design-system": "self.version"
    },
    "require": {
        "nswdpc/silverstripe-content-boilerplate": "^1",
        "nswdpc/silverstripe-feedback-assist": "^1",
        "nswdpc/silverstripe-field-hint": "^1",
        "nswdpc/silverstripe-grid-helpers": "^1",
        "nswdpc/silverstripe-datetime-inputs": "^1",
        "nswdpc/silverstripe-notices": "^1",
        "nswdpc/silverstripe-analytics-chooser": ">=0.2"
    },
    "require-dev": {
        "cambis/silverstripe-rector": "^2",
        "phpunit/phpunit": "^9.5",
        "cambis/silverstan": "^2",
        "nswdpc/ci-files": "dev-v-4",
        "friendsofphp/php-cs-fixer": "^3",
        "phpstan/phpstan": "^2",
        "phpstan/phpstan-phpunit": "^2",
        "rector/rector": "^2"
    },
    "extra": {
        "expose": [
            "themes/nswds/app/static",
            "themes/nswds/app/frontend/dist"
        ],
        "project-files-installed": [
            ".htaccess",
            "app/.htaccess",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "phpstan-analyse": "./vendor/bin/phpstan analyse --ansi --no-progress --no-interaction --configuration vendor/nswdpc/ci-files/phpstan/.phpstan.silverstripe.neon src/",
        "rector-dryrun": "./vendor/bin/rector process --dry-run --ansi --config vendor/nswdpc/ci-files/rector/.rector.silverstripe_53_83.php src/",
        "rector-process": "./vendor/bin/rector process --no-diffs --ansi --config vendor/nswdpc/ci-files/rector/.rector.silverstripe_53_83.php src/",
        "phpcsfixer-fix": "./vendor/bin/php-cs-fixer fix --ansi --no-interaction --config vendor/nswdpc/ci-files/php-cs-fixer/.php-cs-fixer.php src/"
    }
}
